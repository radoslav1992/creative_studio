// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ============== AUTH MODELS (NextAuth.js) ==============

model User {
  id             String    @id @default(cuid())
  name           String?
  email          String    @unique
  emailVerified  DateTime?
  hashedPassword String?
  image          String?
  role           String    @default("user") // "user" | "admin"
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  // Relations
  accounts    Account[]
  sessions    Session[]
  generations Generation[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============== AI MODELS (cached from Replicate API) ==============

model ReplicateModel {
  id             String    @id @default(cuid())
  replicateId    String    @unique        // e.g. "google/veo-3"
  name           String                   // display name, e.g. "Veo 3"
  provider       String                   // e.g. "Google"
  providerColor  String    @default("#888888")
  description    String    @default("")   // Bulgarian description
  category       String                   // "video" | "image"
  capabilities   String    @default("[]") // JSON array: ["text-to-video"]
  badge          String?                  // optional badge text
  inputSchema    String    @default("{}") // Full OpenAPI input schema from Replicate (JSON)
  isActive       Boolean   @default(true)
  lastSyncedAt   DateTime?
  sortOrder      Int       @default(0)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  @@index([category])
  @@index([isActive, category])
  @@map("replicate_models")
}

// ============== APP MODELS ==============

model Generation {
  id        String   @id @default(cuid())
  userId    String
  modelId   String
  modelName String
  prompt    String
  status    String   @default("starting") // starting | processing | succeeded | failed | canceled
  output    String?  // JSON string of output URLs
  error     String?
  category  String   // video | image
  replicateId String? // Replicate prediction ID for polling
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, category])
  @@map("generations")
}
